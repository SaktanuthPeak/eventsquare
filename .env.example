# Application Environment
APP_ENV=prod
DEBUG=False

# Database Configuration
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=changeme_secure_password
MONGO_PORT=27017
DB_NAME=eventsquaredb

# Redis Configuration
REDIS_PORT=6379
REDIS_PASSWORD=changeme_redis_password
