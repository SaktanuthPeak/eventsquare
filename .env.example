# Backend Configuration
BACKEND_PORT=9000
SECRET_KEY=changeme_your_super_secret_key_min_32_characters_long
ACCESS_TOKEN_EXPIRE_MINUTES=10
REFRESH_TOKEN_EXPIRE_MINUTES=43200
